{
  "name": "lenneth",
  "version": "0.0.16",
  "description": "A Node Web Framework on top of Koa",
  "main": "index.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "clean-src": "rm -rf lib/src",
    "ws-publish": "npx ws-ts build .",
    "build":
      "yarn clean && yarn ws-publish && npx gulp copy && yarn clean-src && npx gulp relative",
    "deploy": "npm publish ./lib"
  },
  "dependencies": {
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "reflect-metadata": "^0.1.12",
    "ts-log-debug": "^4.0.3",
    "tslib": "^1.9.0",
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "gulp": "^3.9.1",
    "gulp-add-src": "^1.0.0",
    "mocha": "^5.0.4",
    "sinon": "^4.4.5",
    "sinon-chai": "^3.0.0",
    "typescript": "^2.8.1",
    "vinyl-paths": "^2.1.0",
    "ws-ts": "^1.1.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soraping/lenneth.git"
  },
