{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "rootDir": "./",
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "@constants": ["constants"],
      "@common": ["common"],
      "@utils": ["utils"],
      "@interfaces": ["interfaces"],
      "@decorators": ["decorators"],
      "lenneth": ["."]
    }
  },
  "exclude": ["node_modules", "lib"],
  "include": ["./typings"],
  "files": ["./index.ts"]
}
