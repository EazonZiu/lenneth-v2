{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "rootDir": "./",
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@common": ["src/common"],
      "@utils": ["src/utils"],
      "@interfaces": ["src/interfaces"],
      "@decorators": ["src/decorators"],
      "lenneth": ["src"]
    }
  },
  "exclude": ["node_modules", "lib"],
  "include": ["./typings"],
  "files": ["./index.ts"]
}
